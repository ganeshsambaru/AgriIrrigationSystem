@model IEnumerable<AgriIrrigationSystem.Web.Models.ViewModels.FarmViewModel>

@{
    ViewData["Title"] = "Farms List";
}

<h2>Farms List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Farm</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Location</th>
            <th>Size (Hectares)</th>
            <th>Owner</th>
            <th>Crop Count</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var farm in Model)
        {
            <tr>
                <td>@farm.Id</td>
                <td>@farm.Name</td>
                <td>@farm.Location</td>
                <td>@farm.Size</td>
                <td>@farm.OwnerName</td>
                <td>@farm.CropCount</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@farm.Id" class="btn btn-info btn-sm me-2">
                        <i class="bi bi-eye me-1"></i> Details
                    </a>
                    <a asp-action="Edit" asp-route-id="@farm.Id" class="btn btn-warning btn-sm me-2">
                        <i class="bi bi-pencil me-1"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@farm.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash me-1"></i> Delete
                    </a>
                </td>


            </tr>
        }
    </tbody>
</table>
