@model AgriIrrigationSystem.Web.Models.ViewModels.FarmViewModel

@{
    ViewData["Title"] = "Delete Farm";
}

<h2>Delete Farm</h2>
<h4>Are you sure you want to delete this farm?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Size</dt>
        <dd class="col-sm-10">@Model.SizeWithUnit</dd>

        <dt class="col-sm-2">Owner</dt>
        <dd class="col-sm-10">@Model.OwnerName</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Confirm Delete
    </button>
    <a href="@ViewBag.ReturnUrl" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancel
    </a>
</form>

